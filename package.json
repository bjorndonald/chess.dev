{
  "name": "chess.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "chess:build": "bun --watch build ./chess/index.ts --outdir ./dist",
    "chess:style": "npx tailwindcss -i ./chess/styles/style.css -o ./dist/output.css --watch",
    "chess:run": "http-server ./dist -p 5500",
    "lint": "eslint 'src/{app,components}/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/{app,components}/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --check \"src/{components,app}/**/*.{js,jsx,ts,tsx,css,scss,json,yaml,md}\"",
    "format:fix": "prettier --write \"src/{components,app}/**/*.{js,jsx,ts,tsx,css,scss,json,yaml,md}\"",
    "types:check": "tsc --pretty --noEmit",
    "lint-staged": {
      "**/*": "prettier --write --ignore-unknown"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0", 
    "autoprefixer": "^10.4.19",
    "contentlayer": "^0.3.4",
    "daisyui": "^4.11.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.13.2",
    "rehype-slug": "^6.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "chess.js": "^1.0.0-beta.8",
    "classnames": "^2.5.1",
    "framer-motion": "^11.2.0",
    "next": "^14.2.3",
    "nextjs-toploader": "^1.6.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-feather": "^2.0.10"
  }
}